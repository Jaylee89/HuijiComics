<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huiji.comic.bobcat.allcomics">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 获取MAC地址 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络通信 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <!-- 获取logcat日志 -->
    <application
        android:name="com.huiji.comic.bobcat.allcomics.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="PGYER_APPID"
            android:value="d9866a01dbd0e6d560748d685bf29256" />

        <!-- 解决7.0私有文件权限 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.LauncherActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.ComicMenuActivity"
            android:label="@string/title_activity_comic_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.X5WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.ComicCollectionActivity"
            android:label="@string/title_activity_comic_collection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.ComicHistoryActivity"
            android:label="@string/title_activity_comic_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.MyActivity"
            android:label="@string/title_activity_my"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.UpdateNoteActivity"
            android:label="@string/title_activity_update_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huiji.comic.bobcat.allcomics.activity.ComicUpdateActivity"
            android:label="@string/title_activity_comic_update"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>