<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_comic_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_normal">

    <LinearLayout
        android:id="@+id/ll_sort_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_sort_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/text_2"
            android:textSize="@dimen/font_big" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/gray_divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comic_view"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_marginRight="@dimen/space_normal"
            android:background="@drawable/img_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_comic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="220dp"
                    android:singleLine="true"
                    android:text="漫画标题"
                    android:textColor="@color/text_1"
                    android:textSize="@dimen/font_big" />

                <TextView
                    android:id="@+id/tv_tip_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_small"
                    android:text="New"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_normal"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_comic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="漫画作者"
                android:textColor="@color/text_2"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_comic_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="漫画简介"
                android:textColor="@color/text_2"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>