<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_normal"
        android:text="@string/tip_update_title"
        android:textColor="@color/text_1"
        android:textSize="@dimen/font_title" />

    <TextView
        android:id="@+id/tv_confirm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_huge"
        android:text="@string/tip_update_message"
        android:textColor="@color/text_1"
        android:textSize="@dimen/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Button_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="@string/cancel"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_divider" />

        <TextView
            android:id="@+id/Button_OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="@string/ok"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

</LinearLayout>