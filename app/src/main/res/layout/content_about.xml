<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huiji.comic.bobcat.huijicomics.activity.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:id="@+id/iv_about_us"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon" />

    <LinearLayout
        android:id="@+id/ll_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_normal"
            android:layout_marginTop="@dimen/space_huge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_normal"
                android:text="Version：#0.0.0"
                android:textColor="@color/text_2"
                android:textSize="@dimen/font_normal" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_refresh" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本APP为个人开发\n估计也没人拿去搞什么商业用途了\n纯粹因为喜欢灰机汉化组的漫画而制作"
            android:textColor="@color/text_2"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</LinearLayout>

