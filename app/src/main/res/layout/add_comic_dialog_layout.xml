<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_large"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/space_small"
            android:text="请输入漫画ID："
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/et_add_comic_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:digits="1234567890"
            android:hint="漫画ID"
            android:inputType="number"
            android:maxLength="7"
            android:maxLines="1"
            android:padding="@dimen/space_small"
            android:singleLine="true"
            android:textColor="@color/text_2"
            android:textColorHint="@color/gray_divider"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:text="注（红色方框内为漫画ID）："
        android:textColor="@color/text_2"
        android:textSize="@dimen/font_normal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="@dimen/space_large"
        android:src="@drawable/img_add_comic_eg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Button_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="@string/cancel"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_divider" />

        <TextView
            android:id="@+id/Button_OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="添加漫画"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

</LinearLayout>