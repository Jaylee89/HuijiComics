<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comic_view"
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:layout_marginRight="@dimen/space_normal"
            android:background="@drawable/img_placeholder"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="漫画标题"
                android:textColor="@color/text_1"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/tv_comic_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="漫画作者"
                android:textColor="@color/text_2"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_comic_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="漫画简介"
                android:textColor="@color/text_2"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Button_Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="@string/cancel"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_divider" />

        <TextView
            android:id="@+id/Button_OK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/confirm_dialog_background"
            android:gravity="center"
            android:padding="@dimen/space_large"
            android:text="确认添加"
            android:textColor="@color/text_1"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

</LinearLayout>