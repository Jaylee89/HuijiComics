<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_normal"
        android:text="@string/tip_update_title"
        android:textColor="@color/text_1"
        android:textSize="@dimen/font_title" />

    <TextView
        android:id="@+id/tv_tip_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_huge"
        android:text="@string/tip_update_message"
        android:textColor="@color/text_1"
        android:textSize="@dimen/font_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_divider" />

    <TextView
        android:id="@+id/btn_tip_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/confirm_dialog_background"
        android:gravity="center"
        android:padding="@dimen/space_large"
        android:text="@string/ok"
        android:textColor="@color/text_1"
        android:textSize="@dimen/font_normal" />
</LinearLayout>